@model System.String
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Entero</h4>
        <hr />

        <div class="form-group">
            @Html.Label("Cadena", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Dato" name="Dato" type="text" value="@Model">
                @Html.ValidationMessage("Cadena", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "IndexString")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}